{
	"name": "obsidian-episteme",
	"version": "0.1.0",
	"description": "Spaced repetition and flashcard generation powered by AI for Obsidian",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node --env-file-if-exists=.env esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node --env-file-if-exists=.env esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [],
	"license": "0-BSD",
	"devDependencies": {
		"@eslint/js": "9.30.1",
		"@types/node": "^20.0.0",
		"@vitest/coverage-v8": "^1.6.1",
		"esbuild": "0.25.5",
		"eslint-plugin-obsidianmd": "0.1.9",
		"globals": "14.0.0",
		"jiti": "2.6.1",
		"tslib": "2.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.35.1",
		"vitest": "^1.6.1"
	},
	"dependencies": {
		"chart.js": "^4.5.1",
		"obsidian": "latest",
		"ts-fsrs": "^5.2.3",
		"zod": "^4.3.5"
	}
}
